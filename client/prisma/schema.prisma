generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


model Account {
  id        String @id
  available Int
  current Int
  name String
  subtype String
  transactions Transaction[]

  @@map("accounts")
}

model Transaction {
  id        String   @id 
  created_at DateTime @default(now())
  account Account @relation(fields: [account_id], references: [id])
  account_id String
  amount Int
  authorized_date DateTime?
  logoUrl String
  merchant_name String
  category String
  currency String

  @@map("transactions")
}
